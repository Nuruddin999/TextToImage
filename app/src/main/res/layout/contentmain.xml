<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:context=".MainActivity"
                tools:showIn="@layout/activity_main"
                android:background="@android:color/white"
                android:orientation="vertical">

    <ja.burhanrashid52.photoeditor.PhotoEditorView android:layout_width="match_parent" android:layout_height="360dp"
                                                   android:scaleType="centerCrop"
                                                   android:id="@+id/imagepreview"/>
    <LinearLayout
            android:id="@+id/content_area"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/imagepreview"
            android:layout_above="@id/menu_buttons">

    </LinearLayout>
    <HorizontalScrollView
            android:id="@+id/menu_buttons"
android:fillViewport="true"
            android:measureAllChildren="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

        <LinearLayout
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">
            <android.support.v7.widget.CardView
                    android:id="@+id/filters_menu"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@color/colorPrimaryDark"
                    app:cardElevation="8dp"
                    android:clickable="true"
            >
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:layout_gravity="center">
                    <ImageView android:layout_width="40dp" android:layout_height="40dp"
                               android:src="@drawable/ic_photo_filter_black_24dp"
                               android:layout_gravity="center"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="Filters"
                              android:textStyle="bold"
                              android:textSize="18sp"
                              android:textAlignment="center"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:id="@+id/edit_menu"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@color/colorPrimaryDark"
                    app:cardElevation="8dp"
                    android:layout_marginLeft="8dp"
            >
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:layout_gravity="center">
                    <ImageView android:layout_width="40dp" android:layout_height="40dp"
                               android:src="@drawable/ic_tonality_black_24dp"
                               android:layout_gravity="center"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="Edit"
                              android:textStyle="bold"
                              android:textSize="18sp"
                              android:textAlignment="center"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:id="@+id/brush_menu"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@color/colorPrimaryDark"
                    app:cardElevation="8dp"
                    android:layout_marginLeft="8dp"
                    android:clickable="true">
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:layout_gravity="center">
                    <ImageView android:layout_width="40dp" android:layout_height="40dp"
                               android:src="@drawable/ic_brush_black_24dp"
                               android:layout_gravity="center"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="Brush"
                              android:textStyle="bold"
                              android:textSize="18sp"
                              android:textAlignment="center"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:id="@+id/addText_menu"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@color/colorPrimaryDark"
                    app:cardElevation="8dp"
                    android:layout_marginLeft="8dp"
                    android:clickable="true">
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:layout_gravity="center">
                    <ImageView android:layout_width="40dp" android:layout_height="40dp"
                               android:src="@drawable/ic_text_fields_black_24dp"
                               android:layout_gravity="center"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="Text"
                              android:textStyle="bold"
                              android:textSize="18sp"
                              android:textAlignment="center"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:id="@+id/adImage_menu"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@color/colorPrimaryDark"
                    app:cardElevation="8dp"
                    android:layout_marginLeft="8dp"
                    android:clickable="true">
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:layout_gravity="center">
                    <ImageView android:layout_width="40dp" android:layout_height="40dp"
                               android:src="@drawable/ic_image_black_24dp"
                               android:layout_gravity="center"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="Image"
                              android:textStyle="bold"
                              android:textSize="18sp"
                              android:textAlignment="center"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </HorizontalScrollView>

</RelativeLayout>